.row
  .col-md-12.center{style: 'padding-top: 3em;'}
    .lead.text-info{style: 'font-size: 3em'}       
      SaushEngine
      %img{src: "/images/seal_baby.png", height: '40px'}
%br
.row        
  %form{method: :post, action: "/q"}
    
    .col-md-4.col-md-offset-2
      .input-group.input-group-lg
        %input.form-control{type: :text, name: 'text', placeholder: "Ask away!"}
        %span.input-group-btn
          %button.btn.btn-info{type: :submit}
            %i.fa.fa-search
    .col-md-4
      .input-group.input-group-lg
        %select.form-control{name: "mime_type"}
          %option{value: ""} All
          - @mime_types.each do |type, name|
            %option{value: "#{type}"}=name
    
 